<div id="index_div" class="container">
  <button id="new_game_button" {{on "click" this.new_game}} type="button">Neues Spiel</button>

  <div id="config_form" class="container">
    <form>
      <fieldset>
        <legend class="w-auto">Optional</legend>
        <div class="form-group row">
          <label for="gameserver_input" class="col-sm-2 col-form-label">Server</label>
          <div class="col-sm-10">
            <Input id="gameserver_input" class="form-control form-control-sm" type="url" @value={{this.gameserver}}/>
          </div>
        </div>
        <div class="form-group row">
          <label for="gameid_input" class="col-sm-2 col-form-label">Gameid</label>
          <div class="col-sm-10">
            <Input id="gameid_input" class="form-control form-control-sm "type="text" @value={{this.gameid}}/>
          </div>
        </div>
        <div class="form-group row">
          <label for="password_input" class="col-sm-2 col-form-label">Passwort</label>
          <div class="col-sm-10">
            <Input id="password_input" class="form-control form-control-sm" type="password" @value={{this.password}}/>
          </div>
        </div>
        {{#if this.connected}}
          <button type="button" class="btn btn-block" disabled>Verbunden</button>
        {{else}}
          <button type="button" class="btn btn-block" {{on "click" (fn config this.gameserver this.gameid this.password)}}>Konfigurieren</button>
        {{/if}}
      </fieldset>
    </form>
  </div>
</div>
